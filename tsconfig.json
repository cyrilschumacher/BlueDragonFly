{
    "compileOnSave": false,
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "preserveConstEnums": true,
        "removeComments": true,
        "target": "ES6"
    },
    "filesGlob": [
        "./src/**/*.ts",
        "!node_modules/**/*.ts"
    ],
    "files": [
        "./src/app.ts",
        "./src/cluster.ts",
        "./src/configuration/application/route.ts",
        "./src/configuration/application/startup.ts",
        "./src/configuration/brute.ts",
        "./src/configuration/bunyan.ts",
        "./src/configuration/handler/compression.ts",
        "./src/configuration/handler/cors.ts",
        "./src/configuration/handler/environment.ts",
        "./src/configuration/handler/i18next.ts",
        "./src/configuration/handler/timeout.ts",
        "./src/configuration/nconf.ts",
        "./src/configuration/settings/view.ts",
        "./src/configuration/transport.ts",
        "./src/controller/index.ts",
        "./src/controller/mail.ts",
        "./src/controller/resume.ts",
        "./src/controller/works.ts",
        "./src/model/request/mail.ts",
        "./src/model/response/error.ts",
        "./src/service/fileDatabase.ts",
        "./src/service/htmlMailer.ts",
        "./src/service/reCaptcha.ts"
    ],
    "exclude": [],
    "atom": {
        "rewriteTsconfig": true
    }
}
