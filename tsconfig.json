        "./src/configuration/startup.ts",
        "./src/controller/index.ts",
        "./src/controller/mail.ts",
        "./src/model/request/mail.ts",
        "./src/service/htmlMailSender.ts",
        "./src/service/mailSender.ts",
        "./src/service/reCaptcha.ts",
        "./src/settings.ts",
        "./src/typing/email-templates/email-templates-tests.ts",
        "./src/typing/email-templates/email-templates.d.ts"
    ],
    "exclude": [],
    "atom": {
        "rewriteTsconfig": true
    }
